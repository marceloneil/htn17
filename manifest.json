{
  "manifest_version": 2,

  "name": "htn17",
  "description": "lowkey hack",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": true
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "content_scripts": [{
    "matches": ["https://*/*"],
    "js": ["webgazer.js", "content.js", "firebase.js"]
  }],

  "background": {
    "scripts": ["jquery.js", "event.js"],
    "persistent": false
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      }
    }
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
